   <left>
      <TabPane prefHeight="810.0" prefWidth="480.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab text="RESOURCES">
              <fx:include fx:id="storageTab" source="storage_tab.fxml" />
          </Tab>
          <Tab text="LEADER CARDS">
              <fx:include fx:id="leaderCardsTab" source="leader_cards_tab.fxml" />
          </Tab>
          <Tab text="SCOREBOARD">
