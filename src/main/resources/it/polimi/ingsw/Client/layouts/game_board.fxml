<BorderPane maxHeight="1080.0" maxWidth="1920.0" minHeight="1080.0" minWidth="1920.0" prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.Client.GUI.FXMLControllers.GameBoard">
   <center>
      <TabPane prefHeight="810.0" prefWidth="1440.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
